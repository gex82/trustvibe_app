rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function signedIn() {
      return request.auth != null;
    }

    function userRole() {
      return request.auth.token.role;
    }

    function isAdmin() {
      return signedIn() && userRole() == 'admin';
    }

    function isSelf(uid) {
      return signedIn() && request.auth.uid == uid;
    }

    function projectDoc(projectId) {
      return get(/databases/$(database)/documents/projects/$(projectId));
    }

    function isProjectParty(projectId) {
      return signedIn() && (
        projectDoc(projectId).data.customerId == request.auth.uid ||
        projectDoc(projectId).data.contractorId == request.auth.uid
      );
    }

    function canReadProject(project) {
      return isAdmin() ||
        project.customerId == request.auth.uid ||
        project.contractorId == request.auth.uid ||
        project.escrowState == 'OPEN_FOR_QUOTES';
    }

    match /users/{uid} {
      allow read, write: if isSelf(uid) || isAdmin();
    }

    match /customerProfiles/{uid} {
      allow read: if signedIn();
      allow write: if isSelf(uid) || isAdmin();
    }

    match /contractorProfiles/{uid} {
      allow read: if signedIn();
      allow write: if isSelf(uid) || isAdmin();
    }

    match /projects/{projectId} {
      allow read: if signedIn() && canReadProject(resource.data);
      allow create, update, delete: if isAdmin();

      match /quotes/{quoteId} {
        allow read: if signedIn() && (
          isAdmin() ||
          isProjectParty(projectId) ||
          projectDoc(projectId).data.escrowState == 'OPEN_FOR_QUOTES'
        );
        allow create, update, delete: if isAdmin();
      }
    }

    match /agreements/{agreementId} {
      allow read: if signedIn();
      allow create, update, delete: if isAdmin();
    }

    match /ledgers/{projectId}/events/{eventId} {
      allow read: if isProjectParty(projectId) || isAdmin();
      allow write: if isAdmin();
    }

    match /messages/{projectId}/items/{messageId} {
      allow read, write: if isProjectParty(projectId) || isAdmin();
    }

    match /cases/{caseId} {
      allow read: if signedIn();
      allow write: if isAdmin();
    }

    match /reviews/{reviewId} {
      allow read: if signedIn();
      allow create, update, delete: if isAdmin();
    }

    match /estimateDeposits/{depositId} {
      allow read: if signedIn() && (
        isAdmin() ||
        resource.data.customerId == request.auth.uid ||
        resource.data.contractorId == request.auth.uid
      );
      allow write: if isAdmin();
    }

    match /paymentAccounts/{userId} {
      allow read: if isSelf(userId) || isAdmin();
      allow write: if isAdmin();
    }

    match /reliabilityScores/{contractorId} {
      allow read: if signedIn();
      allow write: if isAdmin();
      match /history/{itemId} {
        allow read: if signedIn();
        allow write: if isAdmin();
      }
    }

    match /credentialVerifications/{verificationId} {
      allow read: if signedIn() && (
        isAdmin() ||
        resource.data.contractorId == request.auth.uid
      );
      allow write: if isAdmin();
    }

    match /subscriptions/{subscriptionId} {
      allow read: if signedIn() && (
        isAdmin() ||
        resource.data.accountId == request.auth.uid
      );
      allow write: if isAdmin();
    }

    match /billingInvoices/{invoiceId} {
      allow read: if signedIn() && (
        isAdmin() ||
        resource.data.accountId == request.auth.uid
      );
      allow write: if isAdmin();
    }

    match /highTicketCases/{caseId} {
      allow read: if signedIn() && (
        isAdmin() ||
        resource.data.customerId == request.auth.uid ||
        resource.data.contractorId == request.auth.uid ||
        resource.data.conciergeManagerId == request.auth.uid
      );
      allow write: if isAdmin();
      match /bids/{bidId} {
        allow read: if signedIn() && (
          isAdmin() ||
          get(/databases/$(database)/documents/highTicketCases/$(caseId)).data.customerId == request.auth.uid ||
          get(/databases/$(database)/documents/highTicketCases/$(caseId)).data.contractorId == request.auth.uid ||
          get(/databases/$(database)/documents/highTicketCases/$(caseId)).data.conciergeManagerId == request.auth.uid
        );
        allow write: if isAdmin();
      }
    }

    match /referralCredits/{creditId} {
      allow read: if signedIn() && (
        isAdmin() ||
        resource.data.userId == request.auth.uid
      );
      allow write: if isAdmin();
    }

    match /config/{docId} {
      allow read: if signedIn();
      allow write: if isAdmin();
    }

    match /audit/{collection=**}/{docId} {
      allow read, write: if isAdmin();
    }
  }
}
