{
  "name": "trustvibe",
  "private": true,
  "version": "0.1.0",
  "description": "TrustVibe monorepo",
  "workspaces": [
    "apps/*",
    "functions",
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build -w @trustvibe/shared && npm run build -w @trustvibe/functions && npm run build -w @trustvibe/mobile && npm run build -w @trustvibe/admin",
    "lint": "npm run lint -ws --if-present",
    "test": "jest",
    "test:unit": "jest packages/shared/src/__tests__ --runInBand",
    "test:integration": "jest functions/src/__tests__/integration --runInBand --detectOpenHandles",
    "emulators": "firebase emulators:start --only auth,firestore,functions,storage --import=.firebase/emulator-data --export-on-exit",
    "seed": "npm run seed -w @trustvibe/functions",
    "scenario:happy": "npm run scenario:happy -w @trustvibe/functions",
    "scenario:joint": "npm run scenario:joint -w @trustvibe/functions",
    "scenario:external": "npm run scenario:external -w @trustvibe/functions"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "expo": "52.0.49",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "typescript": "^5.7.3"
  },
  "overrides": {
    "react-native": "0.76.9",
    "@react-native/community-cli-plugin": "0.76.9",
    "@react-native/virtualized-lists": "0.76.9",
    "metro": "0.81.5",
    "metro-config": "0.81.5",
    "metro-resolver": "0.81.5"
  },
  "dependencies": {
    "@babel/traverse--for-generate-function-map": "npm:@babel/traverse@^7.29.0",
    "@opentelemetry/api": "^1.9.0"
  }
}
